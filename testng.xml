<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!-- 
    TestNG Suite Configuration
    This file manages test execution order and grouping
    Tests are organized by functionality for better reporting
-->

<suite name="SauceDemo Automation Test Suite" verbose="1" parallel="false">
    
    <!-- Suite-level listeners for better reporting -->
    <listeners>
        <!-- Add custom listeners here if needed -->
    </listeners>
    
    <!-- Test 1: Login Functionality Tests -->
    <test name="1. Login Tests" preserve-order="true">
        <classes>
            <class name="tests.LoginTest">
                <methods>
                    <include name="testValidLogin"/>
                    <include name="testLockedOutUser"/>
                    <include name="testInvalidUsername"/>
                    <include name="testInvalidPassword"/>
                    <include name="testEmptyCredentials"/>
                    <include name="testEmptyPassword"/>
                    <include name="testLoginPageElements"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Test 2: Products Page Tests -->
    <test name="2. Product Tests" preserve-order="true">
        <classes>
            <class name="tests.ProductTest">
                <methods>
                    <include name="testProductsDisplayed"/>
                    <include name="testAddSingleProductToCart"/>
                    <include name="testAddMultipleProductsToCart"/>
                    <include name="testAddAllProductsToCart"/>
                    <include name="testProductNamesDisplayed"/>
                    <include name="testAddProductByName"/>
                    <include name="testNavigateToCart"/>
                    <include name="testLogout"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Test 3: Shopping Cart Tests -->
    <test name="3. Cart Tests" preserve-order="true">
        <classes>
            <class name="tests.CartTest">
                <methods>
                    <include name="testCartPageDisplay"/>
                    <include name="testRemoveSingleItem"/>
                    <include name="testRemoveAllItems"/>
                    <include name="testContinueShopping"/>
                    <include name="testCartItemNames"/>
                    <include name="testVerifyItemInCart"/>
                    <include name="testProceedToCheckout"/>
                    <include name="testEmptyCart"/>
                    <include name="testRemoveItemByName"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Test 4: End-to-End Scenarios -->
    <test name="4. End-to-End Tests" preserve-order="true">
        <classes>
            <class name="tests.EndToEndTest">
                <methods>
                    <include name="testCompletePurchaseFlow"/>
                    <include name="testSingleProductPurchase"/>
                    <include name="testCartModificationFlow"/>
                    <include name="testPurchaseAllProducts"/>
                    <include name="testCheckoutWithMissingInfo"/>
                    <include name="testPurchaseAndLogout"/>
                </methods>
            </class>
        </classes>
    </test>
    
</suite>